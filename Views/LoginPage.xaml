<Page x:Class="StroiMaterials_03.Views.LoginPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:StroiMaterials_03.Views"
      mc:Ignorable="d" 
      d:DesignHeight="900" d:DesignWidth="1400"
      Title="LoginPage">

    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="Введите логин" FontSize="35"/>
            <TextBox x:Name="TBLogin"/>
            <TextBlock Text="Введите пароль" FontSize="35"/>
            <PasswordBox x:Name="PBPassword" Height="50"/>
            <Button Content="Войти" x:Name="BtnIn" Click="BtnIn_Click"/>
        </StackPanel>
    </Grid>
</Page>
